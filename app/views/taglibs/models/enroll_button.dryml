<def tag="enroll-button" attrs="event">
  <% 
     pass = true if event and event.end_time >= DateTime.now.utc
     pass = true unless event
     params = {}
     params.merge! :event_id=>event.id if event
     params.merge! :country_id=>current_user.country.id if current_user.country -%>
  
  <span class="enroll-button" if="&pass">
    <a href="&enrollment_enroll_url :enrollment=>params" param="default">Enroll Here</a>
  </span>
</def>
